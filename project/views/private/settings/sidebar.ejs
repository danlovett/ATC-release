<section class="sidebar">
    <h1 class="title transform-105">Options</h1>
    <div class="items sidebar-items">
        <a id="0" class="transform-105 item profile" href="/settings/profile">Profile</a>
        <a id="1" class="transform-105 item friends" href="/settings/friends">Friends</a>
        <a id="2" class="transform-105 item general" href="/settings/general">General</a>
        <a id="3" class="transform-105 item privacy" href="/settings/privacy">Privacy</a>
        <%_ if(is_admin == "true") { %>
            <a id="4" class="transform-105 item" href="/settings/admin">Admin</a>
        <%_ } %>
        <a id="5" class="transform-105 item" href="/settings/version" >Version</a>
        <a id="6" class="transform-105 item" href="/logout/confirm/this" >Log out</a>
    </div>
</section>

<script src="https://code.jquery.com/jquery-3.7.1.min.js" integrity="sha256-/JqT3SQfawRcv/BIHPThkBvs0OEvtFFmqPF/lYI/Cxo=" crossorigin="anonymous"></script>

<script>
    let path = window.location.pathname
    for(i in $('.item').parents($('.sidebar-items').length)) {;
        if($(`#${i}`).attr('href') == path) {
            $(`#${i}`).attr('id', 'active')
        }
    }
</script>